{% extends 'base.html.twig' %}

{% block title %}Administrar Posts{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Administraci√≥n de Post</h1>
    <table class="tabla-users">
    {% for post in posts %}
        <tr>
            <td ><a class="user" href="post/show/{{ post.id }}">{{ post.title }}</a></td>
            <td ><a class="btn btn-dark edit-user" href="post/edit/{{ post.id }}">Edit</a></td>
            <td><a class="btn btn-danger delete-post" data-id="{{
                post.id}}">Delete</a></td>
        </tr>
    {% endfor %}
    </table>
</div>
{% endblock %}
{% block javascripts %}
    <script src="{{ asset('js/AdminJS.js') }}"></script>
{% endblock %}